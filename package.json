{
  "name": "universal-mcp-bridge",
  "version": "1.0.0",
  "description": "Universal MCP Bridge (Free Edition)",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-bridge": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "serve": "node dist/server.js",
    "dev": "tsc --watch",
    "bundle": "esbuild src/index.ts --bundle --platform=node --format=cjs --outfile=dist/bundle.cjs --external:keytar --external:node-notifier",
    "build:exe": "npm run build && npm run bundle && pkg dist/bundle.cjs --targets node18-win-x64 --output dist/mcp-bridge.exe",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "pkg": {
    "scripts": [
      "dist/**/*.js"
    ],
    "assets": [
      "dist/**/*.js"
    ],
    "targets": [
      "node18-win-x64"
    ]
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "bridge"
  ],
  "author": "",
  "license": "Proprietary",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@supabase/supabase-js": "^2.95.3",
    "chalk": "^5.6.2",
    "chokidar": "^5.0.0",
    "commander": "^14.0.3",
    "gradient-string": "^3.0.0",
    "ink": "^6.7.0",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "keytar": "^7.9.0",
    "node-notifier": "^10.0.1",
    "react": "^19.2.4",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/gradient-string": "^1.1.6",
    "@types/keytar": "^4.4.0",
    "@types/node": "^25.2.3",
    "@types/node-notifier": "^8.0.5",
    "@types/react": "^19.2.14",
    "esbuild": "^0.27.3",
    "pkg": "^5.8.1",
    "typescript": "^5.9.3"
  }
}
